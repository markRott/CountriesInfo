<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InfoScreenButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/textSize_18sp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_height">@dimen/layout_height_48dp</item>
    </style>


</resources>
