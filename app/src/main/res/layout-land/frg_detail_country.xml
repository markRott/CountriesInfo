<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_country_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_country_name"
                style="@style/DetailCountryText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_48dp"
                android:text="@string/country_name" />

            <TextView
                android:id="@+id/tv_country_capital"
                style="@style/DetailCountryText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_48dp"
                android:text="@string/capital" />

            <TextView
                android:id="@+id/tv_country_region"
                style="@style/DetailCountryText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_48dp"
                android:text="@string/country_region" />

            <TextView
                android:id="@+id/tv_country_area"
                style="@style/DetailCountryText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_48dp"
                android:text="@string/country_area" />

            <TextView
                android:id="@+id/tv_country_population"
                style="@style/DetailCountryText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_48dp"
                android:text="@string/population" />

            <TextView
                android:id="@+id/tv_country_numeric_code"
                style="@style/DetailCountryText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_48dp"
                android:text="@string/numeric_code" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>